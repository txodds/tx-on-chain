{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": [
    "object"
  ],
  "description": "Current weather at the venue - can be sent approx 30 minutes prior to start as well as during the game if the conditions change.\nThis action is *confirmed automatically* and will not be followed up with a confirmation message.",
  "title": "weather",
  "allOf": [
    {
      "$ref": "https://txodds.com/schemas/usfootball/common.json"
    },
    {
      "type": [
        "object"
      ],
      "properties": {
        "Action": {
          "type": [
            "string"
          ],
          "description": "Action Type",
          "title": "Action",
          "enum": [
            "weather"
          ]
        },
        "Clock": {
          "type": [
            "object",
            "null"
          ],
          "description": "Game clock",
          "title": "Clock",
          "$ref": "https://txodds.com/schemas/usfootball/common.json#/$defs/Clock"
        },
        "Data": {
          "type": [
            "object"
          ],
          "description": "Action specific info",
          "title": "Data",
          "properties": {
            "Conditions": {
              "type": [
                "array",
                "null"
              ],
              "description": "List of weather conditions at the venue. Usually a combination of 'day' or 'night' plus one of the other values",
              "title": "Conditions",
              "items": {
                "type": [
                  "string"
                ],
                "enum": [
                  "day",
                  "night",
                  "sunny",
                  "raining",
                  "windy",
                  "overcast",
                  "clear",
                  "cloudy",
                  "snowing",
                  "covered",
                  "thunderstorm"
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "StatusId": {
          "type": [
            "number"
          ],
          "description": "The ID for the current game period. See [StatusId](#status-id)",
          "title": "StatusId",
          "examples": [
            2,
            6,
            1,
            4,
            3
          ]
        }
      }
    }
  ],
  "unevaluatedProperties": false,
  "required": [
    "Action",
    "ConnectionId",
    "Data",
    "FixtureId",
    "Id",
    "Seq",
    "StatusId",
    "Ts",
    "Type"
  ]
}
