{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": [
    "object"
  ],
  "description": "Update to confirm if the game is being played on the home team, away team or a neutral venue.\nThis action is *confirmed automatically* and will not be followed up with a confirmation message.",
  "title": "venue",
  "allOf": [
    {
      "$ref": "https://txodds.com/schemas/usfootball/common.json"
    },
    {
      "type": [
        "object"
      ],
      "properties": {
        "Action": {
          "type": [
            "string"
          ],
          "description": "Action Type",
          "title": "Action",
          "enum": [
            "venue"
          ]
        },
        "Clock": {
          "type": [
            "object",
            "null"
          ],
          "description": "Game clock",
          "title": "Clock",
          "$ref": "https://txodds.com/schemas/usfootball/common.json#/$defs/Clock"
        },
        "Data": {
          "type": [
            "object"
          ],
          "description": "Action specific info",
          "title": "Data",
          "properties": {
            "Type": {
              "type": [
                "string"
              ],
              "description": "Venue type",
              "title": "Type",
              "enum": [
                "away",
                "home",
                "neutral"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "Type"
          ]
        },
        "StatusId": {
          "type": [
            "number"
          ],
          "description": "The ID for the current game period. See [StatusId](#status-id)",
          "title": "StatusId",
          "examples": [
            1,
            2,
            6,
            11,
            4
          ]
        }
      }
    }
  ],
  "unevaluatedProperties": false,
  "required": [
    "Action",
    "ConnectionId",
    "Data",
    "FixtureId",
    "Id",
    "Seq",
    "Ts",
    "Type"
  ]
}
